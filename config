##   Appearance   ##

hide_edge_borders both
for_window [class="^.*"] border pixel 1
gaps inner 8
gaps outer 0
font pango:hack 10

##   Autostart   ##

exec --no-startup-id $browser
exec --no-startup-id nm-applet
exec --no-startup-id compton --config $HOME/.config/i3/compton.conf
exec --no-startup-id wal -R 
exec --no-startup-id thunar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh


##   Scratchpad   ##
exec --no-startup-id $term --name dropdown
for_window [instance="dropdown"] floating enable 
for_window [instance="dropdown"] resize set 1291 500 
for_window [instance="dropdown"] move scratchpad; [instance="dropdown"] scratchpad show; move position 39px 27px; resize grow width 0px; move scratchpad
for_window [instance="dropdown"] border pixel 0
bindsym $mod+grave [instance="dropdown"] scratchpad show

exec --no-startup-id $term --name ranger -e "ranger"
for_window [instance="ranger"] floating enable
for_window [instance="ranger"] resize set 600 300
for_window [instance="ranger"] move scratchpad; [instance="ranger"] scratchpad show; move position 766px 468px; resize grow width -1px; resize grow height -1px; move scratchpad
for_window [instance="ranger"] border pixel 2
bindsym $mod+e [instance="ranger"] scratchpad show

##   Floating   ##
exec --no-startup-id wpg
for_window [class="Wpg"] floating enable; resize set 800 600; move scratchpad; move position center
bindsym $mod+F7 [class="Wpg"] scratchpad show

##   Defaults   ##

set $mod Mod4
floating_modifier $mod
set $term kitty 
set $browser firefox
set $email thunderbird
set $locker $HOME/.scripts/pixelock.sh
set $HOME /home/vide0hanz

